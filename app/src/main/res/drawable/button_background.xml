<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Background color when enabled -->
            <stroke android:color="#000000" android:width="2dp" /> <!-- Border color and width -->
            <corners android:radius="50dp" /> <!-- Radius for rounded corners -->
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#CCCCCC" /> <!-- Background color when disabled -->
            <stroke android:color="#000000" android:width="2dp" /> <!-- Border color and width -->
            <corners android:radius="50dp" /> <!-- Radius for rounded corners -->
        </shape>
    </item>
</selector>
