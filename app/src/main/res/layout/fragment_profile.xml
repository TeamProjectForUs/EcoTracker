<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.FeedFragment">

    <TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:layout_marginTop="80dp"
    android:text="User"
    android:textSize="40dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ImageView
    android:id="@+id/imageView1"
    android:layout_width="61dp"
    android:layout_height="57dp"
    android:layout_marginStart="-30dp"
    android:layout_marginTop="-105dp"
    android:rotation="175"
    android:src="@drawable/leaf"
    app:layout_constraintEnd_toEndOf="@id/textView"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="@id/textView"
    app:layout_constraintTop_toBottomOf="@id/textView" />

    <ImageView
    android:id="@+id/imageView2"
    android:layout_width="61dp"
    android:layout_height="57dp"
    android:layout_marginTop="-40dp"
    android:layout_marginStart="-30dp"
    android:rotation="44"
    android:src="@drawable/leaf"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@id/textView"
    app:layout_constraintTop_toBottomOf="@id/textView" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.example.ecotracker.DataFragment"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@id/allPostsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/allPostsButton"
        android:layout_width="65dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:backgroundTint="#D0E3D8"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="All Posts"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/fragmentContainerView"
        app:layout_constraintEnd_toEndOf="@id/fragmentContainerView"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="@id/fragmentContainerView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.909"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/photoButton"
        android:layout_width="54dp"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@drawable/button_selector_photos"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="Photos"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/fragmentContainerView"
        app:layout_constraintEnd_toEndOf="@id/fragmentContainerView"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="@id/fragmentContainerView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.833"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />


    <Button
        android:id="@+id/favTipsButton"
        android:layout_width="112dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@drawable/button_selector_favorite_tips"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="Favorite Eco Tips"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/fragmentContainerView"
        app:layout_constraintEnd_toEndOf="@id/fragmentContainerView"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="@id/fragmentContainerView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/goalsButton"
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@drawable/button_selector_goals"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="Goals"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/fragmentContainerView"
        app:layout_constraintEnd_toEndOf="@id/fragmentContainerView"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="@id/fragmentContainerView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.8"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />


    <ImageView
        android:id="@+id/imageNewPost"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_newpost"
        app:layout_constraintBottom_toBottomOf="@id/fragmentContainerView"
        app:layout_constraintEnd_toEndOf="@id/fragmentContainerView"
        app:layout_constraintHorizontal_bias="0.988"
        app:layout_constraintStart_toStartOf="@id/fragmentContainerView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.85"
        tools:ignore="ContentDescription"
        tools:src="@drawable/img_newpost" />

    <androidx.fragment.app.FragmentContainerView
    android:id="@+id/fragmentContainerView2"
    android:name="com.example.ecotracker.DataFragment"
    android:layout_width="66dp"
    android:layout_height="60dp"
    android:layout_marginTop="4dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ImageView
    android:id="@+id/imageButton"
    android:layout_width="33dp"
    android:layout_height="30dp"
    android:scaleType="fitXY"
    android:src="@drawable/menu"
    app:layout_constraintBottom_toBottomOf="@id/fragmentContainerView2"
    app:layout_constraintEnd_toEndOf="@id/fragmentContainerView2"
    app:layout_constraintStart_toStartOf="@id/fragmentContainerView2"
    app:layout_constraintTop_toTopOf="@id/fragmentContainerView2"
    tools:ignore="ContentDescription" />




</androidx.constraintlayout.widget.ConstraintLayout>
