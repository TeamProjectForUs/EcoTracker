<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileViewFragment">

    <TextView
        android:id="@+id/userNameTv"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginTop="110dp"
        android:text="EcoTracker"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:scaleType="fitStart"
        android:layout_marginTop="-100dp"
        android:rotation="175"
        android:src="@drawable/leaf"
        app:layout_constraintEnd_toStartOf="@id/userNameTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userNameTv" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:scaleType="fitStart"
        android:layout_height="57dp"
        android:layout_marginTop="-50dp"
        android:rotation="44"
        android:src="@drawable/leaf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/userNameTv"
        app:layout_constraintTop_toBottomOf="@id/userNameTv" />

    <LinearLayout
        android:id="@+id/notificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userNameTv">

        <ImageView
            android:id="@+id/notificationsPasswordBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/icon_notification"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/profileContentFragment"
        android:layout_width="404dp"
        android:layout_height="476dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent" >

        <LinearLayout
            android:id="@+id/oldPasswordEditLayout"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_marginTop="48dp"
            android:padding="2dp">

            <TextView
                android:id="@+id/oldPasswordLabel"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="Old password:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/oldPasswordId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Old password"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintStart_toEndOf="@id/oldPasswordLabel" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/newPasswordEditLayout"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginTop="140dp"
            android:padding="2dp"
            app:layout_constraintTop_toBottomOf="@id/oldPasswordEditLayout">

            <TextView
                android:id="@+id/newPasswordLabel"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="New password:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/newPasswordId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="New password"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintStart_toEndOf="@id/newPasswordLabel" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ChangePasswordBtnBtn"
            android:layout_width="151dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/white"
            android:padding="1dp"
            android:text="Change password"
            android:textAllCaps="false"
            android:textSize="15dp"
            app:cornerRadius="100dp"
            app:layout_constraintTop_toBottomOf="@id/newPasswordEditLayout"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
