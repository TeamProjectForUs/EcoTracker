<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileViewFragment">

    <TextView
        android:id="@+id/userNameTv"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginTop="110dp"
        android:text="EcoTracker"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:scaleType="fitStart"
        android:layout_marginTop="-100dp"
        android:rotation="175"
        android:src="@drawable/leaf"
        app:layout_constraintEnd_toStartOf="@id/userNameTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userNameTv" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:scaleType="fitStart"
        android:layout_height="57dp"
        android:layout_marginTop="-50dp"
        android:rotation="44"
        android:src="@drawable/leaf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/userNameTv"
        app:layout_constraintTop_toBottomOf="@id/userNameTv" />

    <LinearLayout
        android:id="@+id/notificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userNameTv">

        <ImageView
            android:id="@+id/notificationsProfileBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/icon_notification"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/profileContentFragment"
        android:layout_width="414dp"
        android:layout_height="506dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent" >

        <LinearLayout
            android:id="@+id/userPicLayout"
            android:layout_width="wrap_content"
            android:layout_height="496dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notificationLayout">

            <ImageView
                android:id="@+id/userPic"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:gravity="center"
                android:src="@drawable/avatar" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ChangeProfileBtn"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:backgroundTint="@color/white"
                android:padding="0dp"
                android:text="Change profile picture"
                android:textAllCaps="false"
                android:textSize="15dp"
                app:cornerRadius="100dp"
                app:layout_constraintTop_toBottomOf="@id/userPic"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ChangePasswordBtn"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:backgroundTint="@color/white"
                android:padding="1dp"
                android:text="Change password"
                android:textAllCaps="false"
                android:textSize="15dp"
                app:cornerRadius="100dp"
                app:layout_constraintTop_toBottomOf="@id/ChangeProfileBtn"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />

            <LinearLayout
                android:id="@+id/usernameLayout"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/usernameLabel"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:paddingStart="4dp"
                    android:text="Username:"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/usernameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Username"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    app:layout_constraintStart_toEndOf="@id/usernameLabel" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editProfileSaveBtn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/white"
                android:padding="1dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="20dp"
                app:cornerRadius="100dp"
                app:layout_constraintTop_toBottomOf="@id/usernameLayout"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />
        </LinearLayout>
</FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
